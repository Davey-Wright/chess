<h1><%= current_game.name %></h1>

<h4><%= @game.state %></h4>

<table class='chessboard'>
	<% @grid.each_with_index do |row, y| %>
		<tr id='row <%= y %>'>
			<% row.each_with_index do |piece, x| %>
				<td id='column <%= x %>'>
          <% if !piece.nil? %>
					<%= link_to class: 'piece' %>
        </td>
			<% end %>
		</tr>
	<% end %>
</table>
