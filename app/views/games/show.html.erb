<h1><%= @game.name %> games controller</h1>

<h4><%= @game.state %></h4>

<table class='chessboard'>
	<% @chess_board.each_with_index do |row, y| %>
		<tr>
			<% row.each_with_index do |piece, x| %>
				<td>
          <% if !piece.nil? %>
						<%= link_to "#{ Pieces::Color.call(piece) } #{ piece.type }",
							piece_path(piece),
							class: "piece"
						%>
					<% end %>
        </td>
			<% end %>
		</tr>
	<% end %>
</table>
